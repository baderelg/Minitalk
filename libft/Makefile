# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

RESET = \033[0m
RED = \033[31m
GREEN = \033[32m
YELLOW = \033[33m
BLUE = \033[34m
MAGENTA = \033[35m
CYAN = \033[36m
GRAY = \033[90m
UNDERLINE = \033[4m

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#         ğŸ› ï¸ CONFIGURATION
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

NAME = libft.a

CONVERT = ft_atoi	\
		ft_itoa

CTYPE =	ft_isalnum	\
		ft_isalpha	\
		ft_isascii	\
		ft_isdigit	\
		ft_isprint	\
		ft_tolower	\
		ft_toupper

IO =	ft_putchar_fd	\
		ft_putendl_fd	\
		ft_putnbr_fd	\
		ft_putstr_fd	\
		ft_putstr_bin_fd

MEMORY = ft_bzero	\
		ft_calloc	\
		ft_memchr	\
		ft_memcmp	\
		ft_memcpy	\
		ft_memmove	\
		ft_memset

STRING = ft_split	\
		ft_strchr	\
		ft_strdup	\
		ft_striteri	\
		ft_strjoin	\
		ft_strlcat	\
		ft_strlcpy	\
		ft_strlen	\
		ft_strmapi	\
		ft_strncmp	\
		ft_strnstr	\
		ft_strrchr	\
		ft_strtrim	\
		ft_substr

LISTS =	ft_lstadd_back	\
		ft_lstadd_front	\
		ft_lstclear		\
		ft_lstdelone	\
		ft_lstiter		\
		ft_lstlast		\
		ft_lstmap		\
		ft_lstnew		\
		ft_lstsize

FT_PRINTF =	ft_printf	\
		ft_printf_utils	\
		ft_printf_hex

GNL = get_next_line	\
	get_next_line_utils

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#      ğŸš§ SETUP & DEPENDENCIES
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

SRCS = $(addprefix src/convert/, $(addsuffix .c,$(CONVERT))) \
	$(addprefix src/ctype/, $(addsuffix .c,$(CTYPE))) \
	$(addprefix src/io/, $(addsuffix .c,$(IO))) \
	$(addprefix src/memory/, $(addsuffix .c,$(MEMORY))) \
	$(addprefix src/string/, $(addsuffix .c,$(STRING))) \
	$(addprefix src/lists/, $(addsuffix .c,$(LISTS))) \
	$(addprefix src/ft_printf/, $(addsuffix .c,$(FT_PRINTF))) \
	$(addprefix src/gnl/, $(addsuffix .c,$(GNL)))

OBJS = ${SRCS:.c=.o}

DEPS =  $(OBJS:.o=.d)

CC = cc
CFLAGS = -Wall -Wextra -Werror -I ./include -MMD -MP
AR = ar
ARFLAGS = rcs

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#        ğŸ’½ COMPILATION RULE
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

.c.o:
	@printf "Compiling $(BLUE)%-35s$(RESET)" $<
	@$(CC) $(CFLAGS) -c $< -o ${<:.c=.o} && printf "âœ…\n" || printf "âŒ\n"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#            ğŸ¯ TARGETS
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

all:	$(NAME)

$(NAME):	$(OBJS)
	@echo "$(MAGENTA)â³ Archiving to $(NAME)$(RESET)"
	@$(AR) $(ARFLAGS) $(NAME) $(OBJS)
	@echo "$(GREEN)âœ… $(NAME) created$(RESET)"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#            ğŸ§¹ CLEANING
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

clean:
	@rm -f $(OBJS) $(OBJS:.o=.d)
	@echo "$(YELLOW)ğŸ§¹ Libft objects and dependencies deleted (clean)$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(RED)âŒ $(NAME) removed (fclean)$(RESET)"

re:	fclean all

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#         ğŸŒ HELP & FOOTER
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

help:
	@echo "$(BLUE)Available targets:$(RESET)"
	@echo "$(YELLOW)all      $(RESET)â€“ Build libft.a"
	@echo "$(YELLOW)clean    $(RESET)â€“ Delete .o files"
	@echo "$(YELLOW)fclean   $(RESET)â€“ Full clean (including libft.a)"
	@echo "$(YELLOW)re       $(RESET)â€“ fclean + all"

-include $(DEPS)

.PHONY: all clean fclean re bonus
